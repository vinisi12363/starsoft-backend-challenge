server {
    server_name apistarsoft.vvsistemas.com.br;

    location / {
        proxy_pass http://127.0.0.1:4000;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # Repassando IP real do cliente para a API (importante para o Rate Limiting e Logs)
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeout aumentado para endpoints lentos (se houver)
        proxy_read_timeout 60s;
    }

    # Configuração Porta 80
    listen 80;
    
    # Logs de acesso (opcional)
    access_log /var/log/nginx/starsoft_access.log;
    error_log /var/log/nginx/starsoft_error.log;
}
