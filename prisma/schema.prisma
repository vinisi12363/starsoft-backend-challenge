// ===========================================
// Cinema Ticket System - Prisma Schema
// ===========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// User - Usuário do sistema
// ===========================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  reservations Reservation[]
  sales        Sale[]

  @@map("users")
}

// ===========================================
// Session - Sessão de cinema (filme, horário, sala)
// ===========================================
model Session {
  id          String   @id @default(uuid())
  movieTitle  String   @map("movie_title")
  showTime    DateTime @map("show_time")
  roomName    String   @map("room_name")
  ticketPrice Float    @map("ticket_price")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  seats        Seat[]
  reservations Reservation[]

  @@map("sessions")
}

// ===========================================
// Seat - Assento individual de uma sessão
// ===========================================
enum SeatStatus {
  AVAILABLE
  RESERVED
  SOLD
}

model Seat {
  id         String     @id @default(uuid())
  sessionId  String     @map("session_id")
  rowLabel   String     @map("row_label")
  seatNumber Int        @map("seat_number")
  status     SeatStatus @default(AVAILABLE)
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")

  session          Session           @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  reservationSeats ReservationSeat[]

  @@unique([sessionId, rowLabel, seatNumber])
  @@map("seats")
}

// ===========================================
// Reservation - Reserva temporária (30 segundos)
// ===========================================
enum ReservationStatus {
  PENDING
  CONFIRMED
  EXPIRED
  CANCELLED
}

model Reservation {
  id             String            @id @default(uuid())
  userId         String            @map("user_id")
  sessionId      String            @map("session_id")
  expiresAt      DateTime          @map("expires_at")
  status         ReservationStatus @default(PENDING)
  idempotencyKey String?           @unique @map("idempotency_key")
  createdAt      DateTime          @default(now()) @map("created_at")
  updatedAt      DateTime          @updatedAt @map("updated_at")

  user             User              @relation(fields: [userId], references: [id])
  session          Session           @relation(fields: [sessionId], references: [id])
  reservationSeats ReservationSeat[]
  sale             Sale?

  @@index([expiresAt, status])
  @@map("reservations")
}

// ===========================================
// ReservationSeat - Relação N:N entre Reservation e Seat
// ===========================================
model ReservationSeat {
  id            String @id @default(uuid())
  reservationId String @map("reservation_id")
  seatId        String @map("seat_id")

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  seat        Seat        @relation(fields: [seatId], references: [id])

  @@unique([reservationId, seatId])
  @@map("reservation_seats")
}

// ===========================================
// Sale - Venda confirmada (após pagamento)
// ===========================================
model Sale {
  id            String   @id @default(uuid())
  reservationId String   @unique @map("reservation_id")
  userId        String   @map("user_id")
  totalAmount   Float    @map("total_amount")
  confirmedAt   DateTime @default(now()) @map("confirmed_at")
  createdAt     DateTime @default(now()) @map("created_at")

  reservation Reservation @relation(fields: [reservationId], references: [id])
  user        User        @relation(fields: [userId], references: [id])

  @@map("sales")
}
