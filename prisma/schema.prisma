// ===========================================
// Cinema Ticket System - Prisma Schema (Distributed Version)
// ===========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// User - Usuário do sistema
// ===========================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  reservations Reservation[]
  sales        Sale[]

  @@map("users")
}

// ===========================================
// Room - Estrutura física da sala
// ===========================================
enum RoomStatus {
  ACTIVE
  MAINTENANCE
  INACTIVE
}

model Room {
  id        String     @id @default(uuid())
  name      String     @unique
  capacity  Int
  status    RoomStatus @default(ACTIVE)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  seats    Seat[]
  sessions Session[]

  @@map("rooms")
}

// ===========================================
// Seat - Coordenada física do assento na sala
// ===========================================
model Seat {
  id         String   @id @default(uuid())
  roomId     String   @map("room_id")
  rowLabel   String   @map("row_label")
  seatNumber Int      @map("seat_number")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  room         Room          @relation(fields: [roomId], references: [id], onDelete: Cascade)
  sessionSeats SessionSeat[]

  @@unique([roomId, rowLabel, seatNumber])
  @@map("seats")
}

// ===========================================
// Session - O evento (Filme + Sala + Horário)
// ===========================================
model Session {
  id            String   @id @default(uuid())
  roomId        String   @map("room_id")
  movieTitle    String   @map("movie_title")
  startShowTime DateTime @map("start_show_time")
  endShowTime   DateTime @map("end_show_time")
  ticketPrice   Decimal  @map("ticket_price") @db.Decimal(10, 2)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  room         Room          @relation(fields: [roomId], references: [id])
  sessionSeats SessionSeat[]
  reservations Reservation[]

  @@index([roomId, startShowTime, endShowTime])
  @@map("sessions")
}

// ===========================================
// SessionSeat - O estado do assento PARA UMA SESSÃO
// ===========================================
enum SeatStatus {
  AVAILABLE
  RESERVED
  SOLD
}

model SessionSeat {
  id        String     @id @default(uuid())
  sessionId String     @map("session_id")
  seatId    String     @map("seat_id")
  status    SeatStatus @default(AVAILABLE)
  
  // O version é essencial para Optimistic Locking em alta concorrência
  version   Int        @default(0)

  session   Session    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  seat      Seat       @relation(fields: [seatId], references: [id])
  
  // Uma reserva pode conter múltiplos SessionSeats
  reservationSeats ReservationSeat[]

  @@unique([sessionId, seatId]) // Garante que um assento não seja duplicado na mesma sessão
  @@map("session_seats")
}

// ===========================================
// Reservation - Reserva temporária
// ===========================================
enum ReservationStatus {
  PENDING
  CONFIRMED
  EXPIRED
  CANCELLED
}

model Reservation {
  id             String            @id @default(uuid())
  userId         String            @map("user_id")
  sessionId      String            @map("session_id")
  expiresAt      DateTime          @map("expires_at")
  status         ReservationStatus @default(PENDING)
  idempotencyKey String?           @unique @map("idempotency_key")
  createdAt      DateTime          @default(now()) @map("created_at")
  updatedAt      DateTime          @updatedAt @map("updated_at")

  user             User              @relation(fields: [userId], references: [id])
  session          Session           @relation(fields: [sessionId], references: [id])
  reservationSeats ReservationSeat[]
  sale             Sale?

  @@index([expiresAt, status])
  @@map("reservations")
}

model ReservationSeat {
  id            String @id @default(uuid())
  reservationId String @map("reservation_id")
  sessionSeatId String @map("session_seat_id")

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  sessionSeat SessionSeat @relation(fields: [sessionSeatId], references: [id])

  @@unique([reservationId, sessionSeatId])
  @@map("reservation_seats")
}

// ===========================================
// Sale - Venda confirmada
// ===========================================
model Sale {
  id            String   @id @default(uuid())
  reservationId String   @unique @map("reservation_id")
  userId        String   @map("user_id")
  totalAmount   Decimal  @map("total_amount") @db.Decimal(10, 2)
  confirmedAt   DateTime @default(now()) @map("confirmed_at")
  createdAt     DateTime @default(now()) @map("created_at")

  reservation Reservation @relation(fields: [reservationId], references: [id])
  user        User        @relation(fields: [userId], references: [id])

  @@map("sales")
}