// ===========================================
// Cinema Ticket System - Prisma Schema
// ===========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// User - Usuário do sistema
// ===========================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  reservations Reservation[]
  sales        Sale[]

  @@map("users")
}

// ===========================================
// Room - Sala de cinema (permanente)
// ===========================================
enum RoomStatus {
  ACTIVE
  MAINTENANCE
  INACTIVE
}

model Room {
  id        String     @id @default(uuid())
  name      String     @unique
  capacity  Int
  status    RoomStatus @default(ACTIVE)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  seats    Seat[]
  sessions Session[]

  @@map("rooms")
}

// ===========================================
// Session - Sessão de cinema (filme, horário, sala)
// ===========================================
model Session {
  id            String   @id @default(uuid())
  roomId        String   @map("room_id")
  movieTitle    String   @map("movie_title")
  startShowTime DateTime @map("start_show_time")
  endShowTime   DateTime @map("end_show_time")
  ticketPrice   Decimal  @map("ticket_price") @db.Decimal(10, 2)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  room         Room          @relation(fields: [roomId], references: [id])
  reservations Reservation[]

  @@index([roomId, startShowTime, endShowTime])
  @@map("sessions")
}

// ===========================================
// Seat - Assento individual de uma sala
// ===========================================
enum SeatStatus {
  AVAILABLE
  RESERVED
  SOLD
}

model Seat {
  id         String     @id @default(uuid())
  roomId     String     @map("room_id")
  rowLabel   String     @map("row_label")
  seatNumber Int        @map("seat_number")
  status     SeatStatus @default(AVAILABLE)
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")

  room             Room              @relation(fields: [roomId], references: [id], onDelete: Cascade)
  reservationSeats ReservationSeat[]

  @@unique([roomId, rowLabel, seatNumber])
  @@map("seats")
}

// ===========================================
// Reservation - Reserva temporária (30 segundos)
// ===========================================
enum ReservationStatus {
  PENDING
  CONFIRMED
  EXPIRED
  CANCELLED
}

model Reservation {
  id             String            @id @default(uuid())
  userId         String            @map("user_id")
  sessionId      String            @map("session_id")
  expiresAt      DateTime          @map("expires_at")
  status         ReservationStatus @default(PENDING)
  idempotencyKey String?           @unique @map("idempotency_key")
  createdAt      DateTime          @default(now()) @map("created_at")
  updatedAt      DateTime          @updatedAt @map("updated_at")

  user             User              @relation(fields: [userId], references: [id])
  session          Session           @relation(fields: [sessionId], references: [id])
  reservationSeats ReservationSeat[]
  sale             Sale?

  @@index([expiresAt, status])
  @@map("reservations")
}

// ===========================================
// ReservationSeat - Relação N:N entre Reservation e Seat
// ===========================================
model ReservationSeat {
  id            String @id @default(uuid())
  reservationId String @map("reservation_id")
  seatId        String @map("seat_id")

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  seat        Seat        @relation(fields: [seatId], references: [id])

  @@unique([reservationId, seatId])
  @@map("reservation_seats")
}

// ===========================================
// Sale - Venda confirmada (após pagamento)
// ===========================================
model Sale {
  id            String   @id @default(uuid())
  reservationId String   @unique @map("reservation_id")
  userId        String   @map("user_id")
  totalAmount   Decimal  @map("total_amount") @db.Decimal(10, 2)
  confirmedAt   DateTime @default(now()) @map("confirmed_at")
  createdAt     DateTime @default(now()) @map("created_at")

  reservation Reservation @relation(fields: [reservationId], references: [id])
  user        User        @relation(fields: [userId], references: [id])

  @@map("sales")
}
